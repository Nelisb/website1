<!DOCTYPE html>

@using System.Data;
@using XmlCrud.App_Code;

@{
    Pokoes mySongMethods = Session["playlistClass"] as Pokoes;
    string filePath = Session["filePath"] as string;
}
<html>
<head>
    <link rel="stylesheet" href="~/index.css" />
</head>
<body>
    <div id="container">


        <header>Delete</header>

        <main>
            <div id="deleteContent">
                <form method="post">
                    <a>weet u zeker dat ie weg mag?</a><br />
                    <input type="radio" id="keuze" name="keuze" value="ja" />ja<br />
                    <input type="radio" id="keuze" name="keuze" value="nee" />nee<br />
                    <input type="submit" />
                </form>


                @if (IsPost)
                {
                    if (Request.Form["keuze"] == "ja")
                    {
                        string id = Request.QueryString["id"];
                        mySongMethods.DeleteSong(id, filePath);
                    }

                    Response.Redirect(@"~/index.cshtml");
                }
            </div>
        </main>
        <footer>Mathios & Niels</footer>
    </div>
    
</body>
</html>